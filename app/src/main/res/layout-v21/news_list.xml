<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:layout_margin="12dp">

    <TextView
        android:id="@+id/count"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"

        android:text="1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/search_title"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/count"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"

        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text=""
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/search_title"
        app:layout_constraintLeft_toRightOf="@+id/count"

        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/search_traffic_text"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:text="검색횟수"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toLeftOf="@+id/imageView"

        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/search_traffic"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@+id/imageView"
        android:gravity="center"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@+id/search_traffic_text"
        android:text="5,000,000+"

        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/news_where"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text=""
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toLeftOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/news_title"

        android:gravity="center"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/news_time"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginRight="5dp"
        android:text=""
        app:layout_constraintRight_toLeftOf="@+id/imageView"

        app:layout_constraintTop_toBottomOf="@+id/news_where"
        android:gravity="center"
        tools:ignore="MissingConstraints"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        tools:srcCompat="@tools:sample/avatars"
        android:foregroundGravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"/>


</androidx.constraintlayout.widget.ConstraintLayout>